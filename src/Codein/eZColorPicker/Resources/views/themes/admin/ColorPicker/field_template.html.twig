{% block codeincolor_widget %}
    {% set pickerContainerId = 'codeincolor__' ~ form.vars.id %}
    <div id="{{ pickerContainerId }}">
        <button type="button" class="codeincolor__button" data-pickr-container-id="{{ pickerContainerId }}"></button>
        {{ block('form_widget') }}
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            codeinColor.createPickr({"container": "{{ pickerContainerId }}" });
        });
    </script>
{% endblock %}
